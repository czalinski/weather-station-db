# Weather Station DB - Production Environment Configuration
# Copy to .env and edit as needed

# Docker registry settings
REGISTRY=registry.local
VERSION=latest

# Data directory (bind mount on host)
DATA_DIR=/opt/weather-station-db/data

# Producers to run (space-separated)
# Available: ndbc, openmeteo, nws, isd, oscar
PRODUCERS=ndbc openmeteo

# Kafka broker (optional - leave empty to disable Kafka output)
KAFKA_BOOTSTRAP_SERVERS=

# InfluxDB (optional - leave empty to disable InfluxDB output)
INFLUXDB_URL=
INFLUXDB_TOKEN=
INFLUXDB_ORG=
INFLUXDB_BUCKET=

# ntfy.sh alerting (optional)
NTFY_URL=https://ntfy.sh
NTFY_TOPIC=
